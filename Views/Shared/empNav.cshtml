@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dimension_Data</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.css" integrity="sha512-C7hOmCgGzihKXzyPU/z4nv97W0d9bv4ALuuEbSf6hm93myico9qa0hv4dODThvCsqQUmKmLcJmlpRmCaApr83g==" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.4.0/main.min.css" />

   

    @RenderSection("JavaScript", required: false)

</head>
<body data-spy="scroll" data-target="#nav">


    <div class="row">
        <div class="col-2">

            <nav class="navbar-dark bg-dark nav-tab pl-3" id="#nav">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-brand pb-5 pt-3" href="#"><h4>Dimension Data</h4></a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Index">Dashboard</a>
                    </li>
                    @if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Employee" asp-action="Employees">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="Create">Add Employee</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Employee" asp-action="Analytics">Analytics</a>
                        </li>

                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ToDoes" asp-action="Index">To Do</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link">Profile</a>
                    </li>
                </ul>

                <div class="pt-5 text-center text-decoration-none">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </nav>

        </div>

        <div class="col-10">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer text-muted bg-dark text-center">
        <div class="container">
            &copy; 2020 - Dimension_Data - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
