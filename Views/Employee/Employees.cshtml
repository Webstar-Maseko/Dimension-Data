@model IEnumerable<Dimension_Data.Models.EmployeeData>

@{
    ViewData["Title"] = "Employees";
    Layout = "empNav";

}

<h1> @ViewData["Title"]</h1>


<form asp-action="index" class="form-inline pb-3 ">
    <div class="form-group  ml-auto text-right">
        <input class="form-control " name="id" placeholder="Employee Number" />
        <button type="submit" class="btn btn-success">Find</button>
    </div>

</form>
<div class="table-responsive">
    <table class="table table-striped table-hover  ">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DailyRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.HourlyRate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MonthlyIncome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonthlyRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearsAtCompany)
                </th>



                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DailyRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HourlyRate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MonthlyIncome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonthlyRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearsAtCompany)

                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeNumber">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EmployeeNumber">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EmployeeNumber">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<h3 class="text-center pt-4 pb-4">Summary</h3>
<div class="row pb-5">

    <div class="col-md-6">
        <div class="card bg-dark ">
            <div class="card-header bg-light">
                <h4>Total Salary </h4>
            </div>
            <div class="card-body text-center text-light">
                <span class="card-title"><i class="fa fa-money fa-3x" aria-hidden="true"></i></span>
                <h3 class="card-text pt-2">@ViewBag.salar</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-dark ">
            <div class="card-header bg-light">
                <h5>Environment Satisfaction</h5>
            </div>
            <div class="card-body text-center text-light">
                <span class="card-title"><i class="fa fa-smile-o fa-3x" aria-hidden="true"></i></span>
                <h3 class="card-text pt-2">@ViewBag.satisfa</h3>
            </div>
        </div>
    </div>
</div>
